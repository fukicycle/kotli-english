<div class="study">
    @if (_showAnswer)
    {
        <Animate class="w-100 h-100" style="max-height: 560px;" Animation="Animations.Fade" @onclick=@(() => _showAnswer =
        false)>
            <WordAnswerCard />
        </Animate>
    }
    else
    {
        <Animate class="w-100" Animation="Animations.Fade" @onclick=@(() => _showAnswer = true)>
            <WordCard />
        </Animate>
    }
</div>

@code {
    private bool _showAnswer = false;
}