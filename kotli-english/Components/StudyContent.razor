@inject IFlashcardService FlashcardService
<div class="study">
    @switch (_currentState)
    {
        case Entities.Models.StudyContentState.QUESTION:
            @if (_word == null)
            {
                <Loader Message="単語を読み込み中" />
            }
            else
            {
                <Animate class="w-100" Animation="Animations.Fade" @onclick=@WordCardOnClick>
                    <WordCard Word="@_word.Word" PartOfSpeech="@_word.PartOfSpeech" />
                </Animate>
            }
            break;
        case Entities.Models.StudyContentState.ANSWER:
            <Animate class="w-100 h-100" style="max-height: 560px;" Animation="Animations.Fade" @onclick=@AnswerWordCardOnClick>
                <WordAnswerCard Word="@_word" />
            </Animate>
            break;
        case Entities.Models.StudyContentState.COMPLETE:
            <div>今日の目標達成！</div>
            break;
    }
</div>