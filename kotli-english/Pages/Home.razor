@page "/"

<PageTitle>Home</PageTitle>
<Animate Animation="Animations.Fade" class="animation-container">
    <h1>Hello, world!</h1>
    <button @onclick=@(() => _status = true)>Click me</button>
</Animate>
@if (_status)
{
    <div class="dialog-background" @onclick=@(() => _status = false)>
    <div class="dialog">
        <h1>Hello, world!</h1>
        Welcome to your new app.
    </div>
</div>
}



@code {
    private bool _status = false;
}